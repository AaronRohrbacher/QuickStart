<% @time_records.each do |record| %>
  <%= record.date %>
  <%= record.time %>
  <%= record.punch_type %>
  <%= link_to ' Destroy',  [@invoice, record],  method: :delete %>
  <br>
<% end %>
<%= link_to "Add to invoice", new_invoice_time_record_path(add: true), class: 'btn btn-primary' %>
<%= link_to "Return to Invoice", invoice_path(@invoice), class: 'btn btn-primary' %>


<%= form_for [@invoice, @time_record] do |f| %>
  <% if !@time_records[0] %>
    <%= f.label :date %>
    <%= f.date_field :date, value: Date.today %>
    <%= f.label :rate %>
    <%= f.number_field :rate, step: :any %>
  <% end %>
  <%= f.label :time %>
  <%= f.time_field :time %>
  <%= f.label :punch_type %>
  <%= f.select :punch_type, options_for_select([["Start", "start"], ["End", "end"]]) %>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>
